{% extends 'base.html.twig' %}

{% block title %}
  Hello TodoController!
{% endblock %}

{% block body %}
  <div class="container text-center">
    <h1>Hello {{ controller_name }}! ✅</h1>

    <table class="table table-striped">
      <thead>
        {# TITRE #}
        <tr>
          <th scope="col">#</th>
          <th scope="col">Tâche</th>
          <th scope="col">State</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        {% for todo in todolist %}
          <tr>
            <th scope="row">{{ todo.id }}</th>
            <td>{{ todo.task }}</td>
            <td>

             {# quand on clique la checkbox on appelle la method du controller #}
              <input onchange="window.location.href='{{ path("app.todo.patch.completed", { 'id': todo.id }) }}'" type="checkbox" {{ todo.completed == false ? '' : 'checked' }} />
            </td>

  

            <td>
              <a href="{{ path('app.todo.detail', { id: todo.id }) }}" class="btn btn-info">Détail</a>

              <a href="{{ path('app.todo.delete', { id: todo.id }) }}" class="btn btn-danger">Supprimer {{ todo.id }}</a>
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock %}
